{
    "name": "refactoring-agent",
    "publisher": "vscode-samples",
    "displayName": "Refactoring Agent",
    "description": "An agent for suggesting refactorings for the current selection.",

    "version": "0.1.0",
    "engines": {
        "vscode": "^1.84.0"
    },
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "enabledApiProposals": [
        "chatAgents2",
        "chatRequestAccess",
        "interactive"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "refactoring-agent.apply-refactoring",
                "title": "Apply Refactoring",
                "category": "Refactoring Agent",
                "icon": "$(check)"
            },
            {
                "command": "refactoring-agent.suggestRefactoring",
                "title": "Suggest Refactoring",
                "category": "Refactoring Agent"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "refactoring-agent.apply-refactoring",
                    "group": "navigation",
                    "when": "resourceScheme == 'refactoring-preview'"
                }
            ],
			"copilot": [
				{
					"command": "refactoring-agent.suggestRefactoring",
					"when": "!github.copilot.interactiveSession.disabled && !editorReadonly",
					"group": "copilotAction@20"
				}
			]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/vscode": "1.82.0",
        "eslint": "^7.22.0",
        "tslint": "^6.1.3",
        "typescript": "^4.0.3"
    }
}
